<div class="container p-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header text-center">
                    <h3>Modificar Datos</h3>
                </div>
                <div class="card-body">
                    <form action="/editarPerfil" method="POST">
                        <div class="mb-3">
                            <label class="form-label">Nombre Completo</label>
                            <input type="text" value="{{user.nombre}}" name="nombre" placeholder="Nombre Completo"
                                class="form-control" autofocus required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Tipo de Usuario</label>
                            <select name="tipo" id="miSelect" class="form-select form-select"
                                aria-label=".form-select-sm example" required>
                                <option value="">Seleccione un Tipo de Usuario</option>
                                <option value="1">Gerente</option>
                                <option value="2">Vendedor</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Usuario</label>
                            <input type="text" value="{{user.usuario}}" name="usuario" placeholder="Nombre de Usuario"
                                class="form-control" required>
                        </div>
                        <div class="d-grid gap-2 mb-3">
                            <button class="btn btn-success">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    // Obtener el select por su ID
    const selectElement = document.getElementById('miSelect');

    // Valor que quieres seleccionar autom치ticamente
    const valorSeleccionado = '{{user.tipo}}';

    // Iterar sobre las opciones del select
    for (let i = 0; i < selectElement.options.length; i++) {
        const option = selectElement.options[i];

        // Si el valor de la opci칩n coincide con el valor deseado, seleccionarla
        if (option.value === valorSeleccionado) {
            option.selected = true;
            break; // Detener la iteraci칩n una vez que se haya seleccionado la opci칩n
        }
    }
</script>