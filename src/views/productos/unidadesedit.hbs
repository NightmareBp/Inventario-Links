<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-header text-center">
                    <h3>Editar Unidad de Medida</h3>
                </div>
                <div class="card-body">
                    <form action="/inventario/unidades/edit/{{unidad.id_unidad}}" method="POST">
                        <div class="mb-3">
                            <label class="form-label">Nombre de la Unidad de Medida</label>
                            <input type="text" value="{{unidad.nombre}}" class="form-control" name="nombre" autofocus>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Cantidad de Referencia</label>
                            <input type="text" value="{{unidad.cantidad}}" class="form-control" name="cantidad" autofocus>
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-success" type="submit">Editar Unidad de Medida</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>